@model IEnumerable<WebsiteQuangBaMyNghe.Models.EF.SanPham>
@using WebsiteQuangBaMyNghe.Common
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var strImage = "";
        var img = item.AnhSanPhams.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImage = img.Image;
        }
        <div class="product-item @item.DanhMuc.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@strImage" alt="@item.TenSanPham">
                </div>
                <div class="favorite favorite_left"></div>
                @if (item.GiaKhuyenMai > 0)
                {
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>Sale</span></div>
                }

                <div class="product_info">
                    <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.MaSanPham)">@item.TenSanPham</a></h6>
                    @if (item.GiaKhuyenMai > 0)
                    {
                        <div class="product_price">@Common.FormatNumber(item.GiaKhuyenMai, 0)<span>@Common.FormatNumber(item.Gia, 0)</span></div>
                    }
                    else
                    {
                        <div class="product_price">@Common.FormatNumber(item.Gia, 0)</div>
                    }
                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.MaSanPham">Thêm vào giỏ hàng</a></div>
        </div>
    }
}
