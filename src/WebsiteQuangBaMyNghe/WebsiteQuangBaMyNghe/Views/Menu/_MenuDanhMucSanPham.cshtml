            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="banner_item align-items-center" style="background-image:url(@item.Icon)">
                            <div class="banner_category">
                                <a href="/danh-muc-san-pham/@item.Alias-@item.MaDanhMuc">@item.TenDanhMuc</a>
                            </div>
                        </div>
                    </div>
                }
