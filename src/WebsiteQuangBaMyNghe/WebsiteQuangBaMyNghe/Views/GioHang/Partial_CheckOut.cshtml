@model WebsiteQuangBaMyNghe.Models.OrderViewModel
@using (Ajax.BeginForm("CheckOut", "GioHang", new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "load_data",
    OnComplete= "OnSuccessCO",
    OnFailure= "OnFailure"

}, new { @Id = "myForm" }))
{
    <script>
        function OnSuccessCO() {
            location.href = "/giohang/CheckOutSuccess";
        }
        function OnFailure() {

        }
    </script>
    @Html.AntiForgeryToken()
    var user = Session["user"] as WebsiteQuangBaMyNghe.Models.EF.KhachHang;
    @Html.HiddenFor(x => x.Ma_KH, new { value= user.Ma_KH });
    <h3>Thông tin khách hàng</h3>
    <div class="form-group">
        <label>Họ tên khách hàng</label>
        <input type="text" name="TenKhachHang" class="form-control" value="@user.Hoten" readonly />
    </div>
        <div class="form-group">
            <label>Số điện thoại</label>
            <input type="text" name="DienThoai" class="form-control" value="@user.SoDienThoai" readonly />
        </div>
        <div class="form-group">
            <label>Địa chỉ</label>
            <input type="text" name="DiaChi" class="form-control" value="@user.DiaChi" readonly />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" name="Email" class="form-control" value="@user.Email" readonly />
        </div>
        <div class="form-group">
            <label>Hình thức thanh toán</label>
            <select class="form-control" name="PhuongThucThanhToan">
                <option value="1" selected>COD</option>
                <option value="2">Chuyển khoản</option>
            </select>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="number" name="TrangThaiDH" class="form-control" value="1" hidden />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-success">Đặt hàng</button>
        </div>
        }
