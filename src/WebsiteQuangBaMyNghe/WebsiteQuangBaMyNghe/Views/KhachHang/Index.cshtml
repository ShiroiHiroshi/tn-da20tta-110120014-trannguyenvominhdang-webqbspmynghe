@model WebsiteQuangBaMyNghe.Models.EF.KhachHang
@{
    ViewBag.Title = "Thông tin người dùng";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
@if (Session["user"] != null)
{
    var user = Session["user"] as WebsiteQuangBaMyNghe.Models.EF.KhachHang;
    <div class="container product_section_container">
        <div class="row">
            <div class="col product_section clearfix">

                <!-- Breadcrumbs -->

                <div class="breadcrumbs d-flex flex-row align-items-center">
                    <ul>
                        <li>
                            <a href="/">Trang chủ</a>
                        </li>
                        <li class="active">
                            <a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Thông tin người dùng</a>
                        </li>
                    </ul>
                </div>

                <!-- Sidebar -->
                <!-- Main Content -->
                <div class="row">

                    <div class="col-md-12 text-center">
                        <h1 class="">Thông tin người dùng</h1>
                    </div>

                </div>
                @Html.HiddenFor(x => x.Ma_KH, new { value = user.Ma_KH });
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Họ tên</label>
                        <input type="text" name="TenKhachHang" class="form-control" value="@user.Hoten" readonly />
                    </div>
                    <div class="form-group">
                        <label>Tài khoản</label>
                        <input type="text" name="TenKhachHang" class="form-control" value="@user.TaiKhoan_KH" readonly />
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <input type="password" name="TenKhachHang" class="form-control" value="@user.MatKhau_KH" readonly />
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <input type="text" name="DienThoai" class="form-control" value="@user.SoDienThoai" readonly />
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <input type="text" name="DiaChi" class="form-control" value="@user.DiaChi" readonly />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" name="Email" class="form-control" value="@user.Email" readonly />
                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>
}
    @section scripts
{
        <script src="~/Content/assets/js/categories_custom.js"></script>
}
