@model IEnumerable<WebsiteQuangBaMyNghe.Models.EF.BinhLuan>
<div class="tab_title reviews_title">
    <h4>Reviews (@ViewBag.Count)</h4>
</div>

<!-- User Review -->
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <div class="user_review_container d-flex flex-column flex-sm-row">
            <div class="user">
                <div class="user_pic"></div>
                <div class="user_rating">
                    <ul class="star_rating">
                        @Html.Raw(WebsiteQuangBaMyNghe.Common.Common.HtmlRate(item.DanhGia))
                    </ul>
                </div>
            </div>
            <div class="review">
                <div class="review_date">@item.NgayTao.ToString("dd MM yyyy")</div>
                <div class="user_name">@item.KhachHang.TaiKhoan_KH</div>
                <p>@item.NoiDungBL</p>
            </div>
        </div>
    }
}

