@model WebsiteQuangBaMyNghe.Models.EF.DonHang
@{
    ViewBag.Title = "Chi tiết đơn hàng";
}
@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/donhang" class="nav-link">Danh sách đơn hàng</a>
        </li>
    </ul>
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Mã đơn hàng</label>
                            <p class="form-control">@Model.MaDonHang</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Họ tên khách hàng</label>
                            <p class="form-control">@Model.HoTen</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tổng đơn giá</label>
                            <p class="form-control">@WebsiteQuangBaMyNghe.Common.Common.FormatNumber(Model.ThanhTienDH, 0) đ</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <p class="form-control">@Model.SoDienThoai</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Ngày đặt hàng</label>
                            <p class="form-control">@Model.NgayDatDH.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            <p class="form-control">@Model.Email</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Trạng thái</label>
                            <p class="form-control">@(Model.TrangThaiDH == 1 ? "Chờ thanh toán" : "Đã thanh toán")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Phương thức thanh toán</label>
                            <p class="form-control">@(Model.PhuongThucThanhToan == 1 ? "COD" : "Chuyển khoản")</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h2>Danh sách sản phẩm</h2>
                    </div>
                    <div class="col-12">
                        @Html.Action("Partial_SanPham", "DonHang", new { id = Model.MaDonHang })
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <div class="form-group">
                    <a href="/Admin/DonHang" class="btn btn-danger">Quay về</a>
                </div>
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->
    </div>
</section>




