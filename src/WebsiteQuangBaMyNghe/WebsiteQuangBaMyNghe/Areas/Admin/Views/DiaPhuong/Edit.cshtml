@model WebsiteQuangBaMyNghe.Models.EF.DiaPhuong
@{
    ViewBag.Title = "Cập nhật địa phương";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/DiaPhuong" class="nav-link">Địa phương</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật địa phương</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/diaphuong">Địa phương</a></li>
                    <li class="breadcrumb-item active">Cập nhật địa phương</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Cập nhật thông tin địa phương</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "DiaPhuong", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken();
                    @Html.ValidationSummary(true)
                    <!-- your steps content here -->
                <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Mã địa phương</label>
                        @Html.TextBoxFor(x => x.MaDiaPhuong, new { @class = "form-control", @placehoder = "Mã địa phương" })
                        @Html.ValidationMessageFor(x => x.MaDiaPhuong, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên địa phương</label>
                        @Html.TextBoxFor(x => x.TenDiaPhuong, new { @class = "form-control", @placehoder = "Tên địa phương" })
                        @Html.ValidationMessageFor(x => x.TenDiaPhuong, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <a href="/Admin/DiaPhuong" class="btn btn-danger">Quay về</a>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>
                </div>
                }

            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>



