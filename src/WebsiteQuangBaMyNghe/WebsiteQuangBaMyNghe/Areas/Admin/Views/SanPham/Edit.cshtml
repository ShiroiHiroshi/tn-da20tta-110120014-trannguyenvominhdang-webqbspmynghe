
@model WebsiteQuangBaMyNghe.Models.EF.SanPham
@{
    ViewBag.Title = "Cập nhật sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/SanPham" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật Sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/sanpham">Sản phẩm</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Cập nhật thông tin sản phẩm</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x=> x.MaSanPham)
                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chung</a></li>
                                    @*<li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Hình ảnh</a></li>*@
                                </ul>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">
                                        <div class="form-group">
                                            <label for="TenSanPham">Tên sản phẩm</label>
                                            @Html.TextBoxFor(x => x.TenSanPham, new { @class = "form-control", @placeholder = "Tên sản phẩm" })
                                            @Html.ValidationMessageFor(x => x.TenSanPham, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="DanhMuc">Danh mục</label>
                                            @Html.DropDownListFor(x => x.MaDanhMuc, ViewBag.DanhMuc as SelectList, "-Chọn danh mục sản phẩm-", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.MaDanhMuc, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="DiaPhuong">Địa phương</label>
                                            @Html.DropDownListFor(x => x.MaDiaPhuong, ViewBag.DiaPhuong as SelectList, "-Chọn địa phương-", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.MaDiaPhuong, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="MoTa">Mô tả</label>
                                            @Html.TextAreaFor(x => x.MoTaSanPham, new { @class = "form-control", @placeholder = "Mô tả sản phẩm" })
                                            @Html.ValidationMessageFor(x => x.MoTaSanPham, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Chi tiết sản phẩm</label>
                                            @Html.TextAreaFor(x => x.ThongTinSanPham, new { @class = "form-control", @id = "txtDetail" })
                                            @Html.ValidationMessageFor(x => x.ThongTinSanPham, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="row">
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <label for="SoLuong">Số lượng</label>
                                                    @Html.TextBoxFor(x => x.SoLuong, new { @class = "form-control", @Value = "1" })
                                                    @Html.ValidationMessageFor(x => x.SoLuong, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <label for="Gia">Giá</label>
                                                    <input type="text" name="demoPrice" value="@Model.Gia" id="demoPrice" class="form-control auto" data-a-dec="," data-a-sep=".">
                                                    @Html.HiddenFor(x => x.Gia, new { @class = "", @placeholder = "Giá" })
                                                    @Html.ValidationMessageFor(x => x.Gia, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <label for="GiaKhuyenMai">Giá khuyến mãi</label>
                                                    <input type="text" name="demoSale" value="@Model.GiaKhuyenMai" id="demoSale" class="form-control auto" data-a-dec="," data-a-sep=".">
                                                    @Html.HiddenFor(x => x.GiaKhuyenMai, new { @class = "", @placeholder = "Khuyến mãi" })
                                                    @Html.ValidationMessageFor(x => x.GiaKhuyenMai, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsActive, new { @class = "custom-control-input", @id = "customCheckbox2", @checked = "checked" })
                                                        <label for="customCheckbox2" class="custom-control-label">Hiển thị</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsHot, new { @class = "custom-control-input", @id = "IsHotCheckbox2" })
                                                        <label for="IsHotCheckbox2" class="custom-control-label">Hot</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsSale, new { @class = "custom-control-input", @id = "IsSaleCheckbox" })
                                                        <label for="IsSaleCheckbox" class="custom-control-label">Khuyến mãi</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.tab-pane -->

                                    <!-- /.tab-pane -->
                                </div>
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Cập nhật</button>
                                <a href="/Admin/SanPham" class="btn btn-danger">Quay lại</a>
                            </div>
                        </div> <!-- /.card -->
                    }
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section  scripts{
    <script>
        $(document).ready(function () {
            $('.auto').autoNumeric('init');
            $('#demoPrice').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoPrice').autoNumeric('get');
                $('#Gia').val(demoGet);
                $('#Gia').autoNumeric('set', demoGet);
            });
            $('#demoSale').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoSale').autoNumeric('get');
                $('#GiaKhuyenMai').val(demoGet);
                $('#GiaKhuyenMai').autoNumeric('set', demoGet);
            });
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });

    </script>
}


